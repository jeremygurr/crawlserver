#!/bin/bash

#make -j4 DEBUG_DIAGNOSTICS=t TILES=t GAME="crawlDebug" SAVEDIR="/t/crawl/testSaves" debug

source common 

unset success
while true; do
	cd $code || break

    nice make -j4 TILES=t GAME="crawlDebug" SAVEDIR="/t/crawl/testSaves" debug-lite || break

	success=true
    break
done

if [ "$success" ]; then
	echo "Successful."
else
	echo "Failed!"
	exit 1
fi

